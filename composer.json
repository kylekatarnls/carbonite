{
  "name": "kylekatarnls/carbonite",
  "description": "Freeze, accelerate, slow down time and many more with Carbon.",
  "type": "library",
  "require": {
    "php": "^7.2 || ^8.0",
    "nesbot/carbon": "^2.24"
  },
  "require-dev": {
    "phan/phan": "^3.2",
    "phpmd/phpmd": "^2.9",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^8.5 || ^9.4",
    "squizlabs/php_codesniffer": "^3.0",
    "vimeo/psalm": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "KyleKatarn",
      "email": "carbon@selfbuild.fr"
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "test": [
      "@phpunit",
      "@style-check"
    ],
    "style-check": [
      "@phpcs",
      "@phpcsf",
      "@psalm",
      "@phan"
    ],
    "phan": "phan",
    "phpunit": "phpunit --verbose",
    "phpcs": "phpcs",
    "phpcsf": "composer require friendsofphp/php-cs-fixer:^2.16 && php-cs-fixer fix -v --diff --dry-run || echo 'php-cs-fixer not installed'",
    "phpstan": "phpstan analyse src tests",
    "phpmd": "phpmd src text phpmd.xml",
    "psalm": "psalm"
  }
}

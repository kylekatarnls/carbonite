{
  "name": "kylekatarnls/carbonite",
  "description": "Freeze, accelerate, slow down time and many more with Carbon.",
  "type": "library",
  "require": {
    "php": "^7.2 || ^8.0",
    "nesbot/carbon": "^2.24 || ^3.0@dev",
    "psr/clock": "^1.0"
  },
  "require-dev": {
    "phan/phan": "^5.4.3",
    "phpmd/phpmd": "^2.15.0",
    "phpstan/phpstan": "^1.10.57",
    "phpunit/phpunit": "^8.5.36 || ^9.6.16 || ^10.5.9",
    "squizlabs/php_codesniffer": "^3.8.1",
    "vimeo/psalm": "^4.30.0 || ^5.20.0",
    "friendsofphp/php-cs-fixer": "^2.19.3 || ^3.48.0"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "KyleKatarn",
      "email": "carbon@selfbuild.fr"
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "test": [
      "@phpunit",
      "@style-check"
    ],
    "style-check": [
      "@phpcs",
      "@phpcsf",
      "@psalm",
      "@phan"
    ],
    "phan": "phan",
    "phpunit": "php tests/phpunit.php",
    "phpcs": "phpcs",
    "phpcsf": "php-cs-fixer fix -v --diff --dry-run",
    "phpstan": "phpstan analyse src tests",
    "phpmd": "phpmd src text phpmd.xml",
    "psalm": "psalm"
  }
}
